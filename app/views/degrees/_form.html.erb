<%= form_for @degree, :html => { :class => "form-horizontal degree" } do |f| %>

    <% if @degree.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@degree.errors.count, "error") %> prohibited this degree from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @degree.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@degree[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 5, :class => 'form-control' %>
    </div>
    <%= error_span(@degree[:description]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            degrees_path, :class => 'btn btn-default' %>

<% end %>
